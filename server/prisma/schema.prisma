enum Role{
  DOCTOR
  ADMIN
  SUPERADMIN
  NURSE
  PATIENT
  LAB_OPERATOR
  DESK_OPERATOR
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id Int @id @default(autoincrement())
  full_name String
  Age Int
  email String
  password String
  phone_no String 
  role Role
  created_at DateTime @default(now())
}
